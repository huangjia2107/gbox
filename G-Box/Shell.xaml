                <Button Width="40" Grid.Column="4" Height="22" Style="{StaticResource SysMinBtn}" VerticalAlignment="Top" Command="{Binding MinedCommand}"/>
                <Button Width="40" Grid.Column="5" Height="22" Style="{StaticResource SysCloseBtn}" VerticalAlignment="Top" Command="{Binding CloseCommand}"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="270"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="270"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ContentControl Grid.Row="1"  x:Name="cardRegion" cal:RegionManager.RegionName="{x:Static region:RegionTypes.CardRegion}"/>
                    <ContentControl Grid.Row="3"  x:Name="myGamesRegion" cal:RegionManager.RegionName="{x:Static region:RegionTypes.MyGamesRegion}"/>
                    <ContentControl Grid.Row="5"  x:Name="allGamesRegion" cal:RegionManager.RegionName="{x:Static region:RegionTypes.AllGamesRegion}" />
                </Grid>
                <Grid Grid.Column="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0"/>
                    </Grid.RowDefinitions>
                    <ContentControl Grid.Row="{Binding UpRow}" x:Name="noticeRegion" cal:RegionManager.RegionName="{x:Static region:RegionTypes.NoticeRegion}"/>
                    <ContentControl Grid.Row="{Binding DownRow}" x:Name="introductionRegion" cal:RegionManager.RegionName="{x:Static region:RegionTypes.IntroductionRegion}"/>
                </Grid>
                <Grid Grid.Column="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="250"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ContentControl Grid.Row="1" x:Name="seachRegion" cal:RegionManager.RegionName="{x:Static region:RegionTypes.SeachRegion}"/>
                    <ContentControl Grid.Row="3" x:Name="rankRegion" cal:RegionManager.RegionName="{x:Static region:RegionTypes.RankRegion}"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
