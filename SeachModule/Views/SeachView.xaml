                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" Style="{StaticResource TextSeachGameStyle}" Text="{Binding SeachText}" VerticalContentAlignment="Bottom"/>
